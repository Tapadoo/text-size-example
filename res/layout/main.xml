<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="80dp"
        >
        
        <TextView  android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:text="Static" android:textAppearance="?android:attr/textAppearanceLarge"/>
        
        <TextView style="@style/demoBlock"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="Un spec" />
        <TextView style="@style/demoBlock"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="10sp" android:textSize="10sp" />
        <TextView style="@style/demoBlock"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="12sp" android:textSize="12sp" />
        <TextView style="@style/demoBlock"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="14sp" android:textSize="14sp" />
        <TextView style="@style/demoBlock"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="16sp" android:textSize="16sp" />
        <TextView style="@style/demoBlock"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="18sp" android:textSize="18sp" />
        <TextView style="@style/demoBlock"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="20sp" android:textSize="20sp" />
        
        
        <TextView style="@style/demoBlockDp"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="10dp" android:textSize="10dp" />
        <TextView style="@style/demoBlockDp"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="12dp" android:textSize="12dp" />
        <TextView style="@style/demoBlockDp"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="14dp" android:textSize="14dp" />
        <TextView style="@style/demoBlockDp"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="16dp" android:textSize="16dp" />
        <TextView style="@style/demoBlockDp"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="18dp" android:textSize="18dp" />
        <TextView style="@style/demoBlockDp"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="20dp" android:textSize="20dp" />
        
        <TextView style="@style/demoBlockPt"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="10pt" android:textSize="10pt" />
        <TextView style="@style/demoBlockPt"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="12pt" android:textSize="12pt" />
        <TextView style="@style/demoBlockPt"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="14pt" android:textSize="14pt" />
        <TextView style="@style/demoBlockPt"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="16pt" android:textSize="16pt" />
        <TextView style="@style/demoBlockPt"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="18pt" android:textSize="18pt" />
        <TextView style="@style/demoBlockPt"  android:layout_width="fill_parent" android:layout_height="48dp" android:text="20pt" android:textSize="20pt" />
        
        <TextView  style="@style/demoBlockSize" android:layout_width="100dp" android:layout_height="48dp"  android:text="width 100dp"/>
        <TextView  style="@style/demoBlockSize" android:layout_width="100px" android:layout_height="48dp"  android:text="width 100px"/>
        
        <TextView  style="@style/demoBlockSize" android:layout_width="200dp" android:layout_height="48dp" android:text="width 200dp"/>
        <TextView  style="@style/demoBlockSize" android:layout_width="200px" android:layout_height="48dp" android:text="width 200px"/>
        
        <TextView  style="@style/demoBlockSize" android:layout_width="300dp" android:layout_height="48dp" android:text="width 300dp"/>
        <TextView  style="@style/demoBlockSize" android:layout_width="300px" android:layout_height="48dp" android:text="width 300px"/>
        
        <TextView  style="@style/demoBlockSize" android:layout_width="320dp" android:layout_height="48dp" android:text="width 320dp"/>
        <TextView  style="@style/demoBlockSize" android:layout_width="320px" android:layout_height="48dp" android:text="width 320px"/>
        <TextView android:id="@+id/mpText" style="@style/demoBlockSize" android:layout_width="match_parent" android:layout_height="48dp" android:text="match_parent"/>
        <TextView  android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:text="Interactive" android:textAppearance="?android:attr/textAppearanceLarge"/>
        
        <LinearLayout
            android:id="@+id/llCustomWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView android:id="@+id/tvCustom"  style="@style/demoBlock" android:layout_width="match_parent" android:layout_height="48dp" android:textSize="10sp"  android:text="10 sp"/>
            <SeekBar android:id="@+id/sbAdjustCustom" android:layout_width="match_parent" android:progress="10" android:max="80" android:layout_gravity="center" android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Adjust the slider to change the text size"/>
        
                <LinearLayout
            android:id="@+id/llCustomSizeWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical">
            <TextView android:id="@+id/tvCustomSize"  style="@style/demoBlock" android:layout_width="20dp" android:layout_height="20dp" android:textSize="10sp"  android:text="20 dp"/>
            <TextView android:id="@+id/tvCustomSizePx"  style="@style/demoBlock" android:layout_width="20px" android:layout_height="20px" android:textSize="10sp"  android:text="20 px"/>
            
            <SeekBar android:id="@+id/sbAdjustCustomSizeDp" android:layout_width="match_parent" android:progress="10" android:max="400" android:layout_gravity="center" android:layout_height="wrap_content"/>
            <SeekBar android:id="@+id/sbAdjustCustomSizePx" android:layout_width="match_parent" android:progress="10" android:max="400" android:layout_gravity="center" android:layout_height="wrap_content"/>
            
        </LinearLayout>
        <TextView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Adjust the sliders to change the box sizes"/>
        
        
    </LinearLayout>
</ScrollView>
